{
    "name": "jcolfej/lekiosk-cli",
    "description": "LeKiosk with CLI power !",
    "license": "MIT",
    "authors": [
        {
            "name": "jColfej",
            "email": "contact@colfej.fr"
        }
    ],
    "require": {
        "symfony/console": "^3.3",
        "symfony/yaml": "^3.3",
        "windwalker/crypt": "^3.2",
        "symfony/filesystem": "^3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "kherge/box": "^2.7"
    },
    "autoload": {
        "psr-4": {
            "Colfej\\LeKioskCLI\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Colfej\\LeKioskCLI\\Test\\": "test"
        }
    },
    "bin": ["bin/lekiosk-cli"],
    "scripts": {
        "test": "phpunit --colors=always",
        "build": [
            "box build",
            "git checkout website",
            "rm latest/lekiosk-cli.phar",
            "mv lekiosk-cli.phar latest/",
            "echo \"[{\"name\":\"lekiosk-cli.phar\",\"sha1\":\"$(openssl sha1 latest/lekiosk-cli.phar | cut -d\" \" -f2)\",\"url\":\"https://jcolfej.github.io/LeKiosk-cli/latest/lekiosk-cli.phar\",\"version\":\"$(./latest/lekiosk-cli.phar --version | cut -d\" \" -f2)\"}]\" > ./latest/manifest.json",
            "git add latest/lekiosk-cli.phar latest/manifest.json",
            "git commit -m \"New Release $(./latest/lekiosk-cli.phar --version | cut -d\" \" -f2)\"",
            "git checkout master"
        ]
    }
}
